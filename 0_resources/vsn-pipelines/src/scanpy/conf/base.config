params {
    tools {
        scanpy {
            container = 'vibsinglecellnf/scanpy:1.8.1'
            report {
                annotations_to_plot = []
            }
            feature_selection {
                report_ipynb = "${params.misc.test.enabled ? '../../..' : ''}/src/scanpy/bin/reports/sc_select_variable_genes_report.ipynb"
                flavor = 'seurat'
                minMean = 0.0125  // 0.125
                maxMean = 3  // 2.5
                minDisp = 0.5  //0.7
                off = 'h5ad'
            }
            feature_scaling {
                method = 'zscore_scale'
                maxSD = 10
                off = 'h5ad'
            }
            neighborhood_graph {
                nPcs = 50
                off = 'h5ad'
            }
            dim_reduction {
                report_ipynb = "${params.misc.test.enabled ? '../../..' : ''}/src/scanpy/bin/reports/sc_dim_reduction_report.ipynb"
                pca {
                    method = 'pca'
                    nComps = 50
                    off = 'h5ad'
                }
                umap {
                    method = 'umap'
                    off = 'h5ad'
                }
                tsne {
                    method = 'tsne'
                    off = 'h5ad'
                }
            }
            clustering {
                preflight_checks = true
                report_ipynb = "${params.misc.test.enabled ? '../../..' : ''}/src/scanpy/bin/reports/sc_clustering_report.ipynb"
                method = 'louvain'
                resolution = 0.8
                off = 'h5ad'
            }
            marker_genes {
                method = 'wilcoxon'
                ngenes = 0
                groupby = 'louvain'
                off = 'h5ad'
            }
        }
    }
}

includeConfig 'filter.config'
includeConfig 'data_transformation.config'
includeConfig 'normalization.config'
